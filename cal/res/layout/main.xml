<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<EditText 
	    android:id="@+id/editview"
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:maxLines="2"
    	android:textSize="30dp"
    	android:padding="10dp"
    	android:editable="false"
	    
	    />    
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:padding="5dp"
    	android:orientation="horizontal"
    	
	    >
	    <Button 
	        android:id="@+id/num7"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="7"
    		android:textSize="30dp"
    		android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num8"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="8"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num9"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="9"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/add"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="+"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:padding="5dp"
    	android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/num4"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="4"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num5"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="5"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num6"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="6"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/sub"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="-"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:padding="5dp"
    	android:textSize="30dp"
    	android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/num1"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="1"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num2"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="2"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num3"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="3"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/mul"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="*"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:padding="5dp"
    	android:textSize="30dp"
    	android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/clean"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="C"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/num0"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="0"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/equ"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="="
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	    <Button 
	        android:id="@+id/div"
	        android:layout_width="match_parent"
    		android:layout_height="80dp"
    		android:padding="5dp"
    		android:text="/"
    		android:textSize="30dp"
			android:layout_weight="1"
    		/>
	</LinearLayout>

</LinearLayout>
